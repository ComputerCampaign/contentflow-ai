# 数据库配置
# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=crawler_platform

# 或者直接使用DATABASE_URL (会覆盖上面的配置)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/crawler_platform

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1小时
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30天

# 应用配置
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-app-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx,xls,xlsx,csv,json,xml,html,md
MAX_BATCH_UPLOAD=10

# 日志配置
LOG_DIR=logs
LOG_REQUESTS=False
LOG_FILE=app.log

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 限流配置
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=1000 per hour

# 缓存配置
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Redis配置（可选，用于缓存和任务队列）
REDIS_URL=redis://localhost:6379/0

# 生产环境配置
# 在生产环境中，请确保：
# 1. 更改所有密钥为强随机值
# 2. 设置 DEBUG=False
# 3. 设置 FLASK_ENV=production
# 4. 配置适当的数据库连接
# 5. 配置SSL证书
# 6. 设置适当的CORS源